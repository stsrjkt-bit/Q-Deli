{
  "name": "q-deli-functions",
  "version": "1.0.0",
  "description": "Q-Deli Firebase Cloud Functions backend (Phase 1)",
  "main": "index.js",
  "engines": { "node": "18" },
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "lint": "eslint .",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "build": "echo 'No build step for JS'",
    "start": "node index.js"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^5.0.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "utils/**/*.js",
      "middleware/**/*.js",
      "index.js",
      "config.js"
    ]
  }
}
